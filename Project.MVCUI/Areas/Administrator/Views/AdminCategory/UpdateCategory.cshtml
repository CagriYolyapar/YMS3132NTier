@model Category
@{
    ViewBag.Title = "UpdateCategory";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
               Kategori Güncelleme Sayfası
            </header>
            <div class="panel-body">
                <div class="form">

                    @using (Html.BeginForm("UpdateCategory", "AdminCategory", FormMethod.Post, new { @class = "cmxform form-horizontal tasi-form" }))
                    {
                        @Html.HiddenFor(x => x.ID)

                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2">Kategori İsmi Güncelleyiniz</label>
                            <div class="col-lg-10">
                                @Html.TextBoxFor(x=>x.CategoryName,new {@class="form-control"})
                               
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cemail" class="control-label col-lg-2">E-Mail (required)</label>
                            <div class="col-lg-10">
                                @Html.TextBoxFor(x => x.Description, new {@class="form-control" })
                                
                            </div>
                        </div>
                      
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-info">Kaydet</button>
                            </div>
                        </div>
                    }



                  
                </div>

            </div>
        </section>
    </div>
</div>








@model Category
@{
    ViewBag.Title = "UpdateCategory";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Kategori Ekleme Sayfası
            </header>
            <div class="panel-body">
                <div class=" form">
                    <form class="cmxform form-horizontal tasi-form" id="commentForm" method="post" action="/Administrator/AdminCategory/AddCategory">
                        @Html.HiddenFor(x=>x.ID)
                        <div class="form-group ">
                           
                            <label for="cname" class="control-label col-lg-2">Kategori Adı</label>
                            <div class="col-lg-10">
                                <input class=" form-control" id="cname" name="CategoryName" minlength="2" type="text" required />
                            </div>
                        </div>

                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2">Kategori Açıklaması</label>
                            <div class="col-lg-10">
                                <input class=" form-control" id="cd" name="Description" minlength="2" type="text" required />
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-danger" type="submit">Kaydet</button>

                            </div>
                        </div>

                    </form>
                </div>

            </div>
        </section>
    </div>
</div>

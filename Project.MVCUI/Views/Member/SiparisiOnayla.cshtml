@model Tuple<Order,PaymentVM>
@{
    ViewBag.Title = "SiparisiOnayla";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}
<div class="panel-body">


    <div class=" form">

        @using (Html.BeginForm("SiparisiOnayla", "Member", FormMethod.Post, new { @class = "cmxform form-horizontal tasi-form" }))
        {
            <div class="form-group ">
                <label for="cname" class="control-label col-lg-2">Gönderim Adresi</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(x => x.Item1.ShippedAddress, new { @class = "form-control" })
                </div>

            </div>

            <div class="form-group ">
                <label for="cname" class="control-label col-lg-2">Kart Numarası</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(x => x.Item2.CardNumber, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group ">
                <label for="cname" class="control-label col-lg-2">Kart Uzerindeki Isim</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(x => x.Item2.FirstName, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group ">
                <label for="cname" class="control-label col-lg-2">Kart Uzerindeki Soyisim</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(x => x.Item2.LastName, new { @class = "form-control" })
                </div>
            </div>


            <div class="form-group ">
                <label for="cname" class="control-label col-lg-2">Son Kullanım Tarihi (Ay)</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(x => x.Item2.ExpiryMonth, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group ">
                <label for="cname" class="control-label col-lg-2">Son Kullanım Tarihi (Yıl)</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(x => x.Item2.ExpiryYear, new { @class = "form-control" })
                </div>
            </div>





            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <button class="btn btn-danger" type="submit">Kaydet</button>
                    @Html.ActionLink("İptal", "ProductList", "Member", null, new { @class = "btn btn-default" })

                </div>
            </div>
        }



    </div>

</div>